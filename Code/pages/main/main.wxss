/* pages/main.wxss */
.container {
  margin-top: 0;
  margin-bottom: 0;
  padding: 0;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between
  /*border: 5rpx solid #000*/
}
.loadingText {
  padding: 0;
  font-size: 60rpx;
  text-align: center
}
/*== 滚动字符 ==*/
.banner {
  height: 80rpx;
  width: 100%;
  background-color: #444;
  font-size: 55rpx;
  line-height: 80rpx;
  border: 5rpx solid #000;
  border-radius: 20rpx;
  margin: 5rpx;
  flex-grow: 0;
}
.banner_text {
  white-space: nowrap;
  font-size: 60 rpx;
  color: #fff;
  text-align: center
}
/*== 数字区 ==*/
.box-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  border: 5rpx solid #000;
  width: 740rpx;
  height: 740rpx;
  position: relative;
  flex-grow: 2;
  flex-shrink: 2
}
.box {
  margin: 15rpx;
}
.card {
  width: 160rpx;
  height: 247rpx;
  border-radius: 3px;
  background: #444;
  /*border: 5rpx solid #333;*/
  box-shadow: 0 0 20rpx #000;
  position: relative
}
.card_inner_top {
  font-size: 60rpx;
  color: #fff;
  position: absolute;
  top: 0;
  left: 0
}
.card_inner_bottom {
  font-size: 60rpx;
  color: #fff;
  position: absolute;
  bottom: 0;
  right: 0;
  transform: rotate(180deg)
}
/*== 操作和计时区 ==*/
.operate {
  border-radius: 50rpx;
  border: 5rpx solid #000;
  background-color: #444;
  width: 100%;
  height: 400rpx;
  margin: 5rpx;
  position: relative;
  bottom: 0;
  flex-grow: 3;
  flex-shrink: 3
}
.circle {
  width: 350rpx;
  height: 350rpx;
  border-radius: 50%;
  border: 1rpx solid #000;
  background-color: #333;
  box-shadow: 0 0 20rpx #000;
  padding: 5rpx;
  position: relative;
  left: 50%;
  margin-left: -175rpx;
  top:50%;
  margin-top: -175rpx
}
.view-return {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  position: relative;
  left: 50%;
  margin-left: -40rpx;
  top: 50%;
  margin-top: -40rpx;
  /*pointer-events: auto;*/
  z-index: 100  /* touch 函数 */
}
.menu-list {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: inherit;
  height: inherit;
  margin: auto
}
.menu-item {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-weight: 500;
  /*pointer-events: auto*/
}
.menu-circle-item {
  transform-origin: 50% 175rpx; /* 调整加减乘除位置的 */
  margin: 0 auto;
  margin-top: 5rpx;
  position: relative;
  height: 80rpx;
  width: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  z-index: 1000 /**/
}
.image-style {
  height: 80rpx;
  width: 80rpx;
}
/*=== 计时器 ===*/
.timer {
  height: 80rpx;
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border: 1rpx solid transparent;
  border-radius: 50%;
  background-color: #000;
  border-color: #000;
  position: absolute;
  right: 5rpx;
  top: 5rpx
}
.timer_time {
  font-size: 60rpx;
  font-weight: normal;
  color: #fff;
}
